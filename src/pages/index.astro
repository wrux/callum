---
import {
  ArticleTeaser,
  Heading,
  Logo,
  Section,
  TeaserGrid,
  Text,
  Wordmark,
} from '~/components';
import { getLatestPosts } from '~/sanity/queries';
import { BaseLayout } from '~/layouts';

const posts = await getLatestPosts();
---

<BaseLayout
  meta={{
    title:
      'Exploring the World | callum.co.uk | Personal Travel Adventures Home',
    description:
      'Embark on a journey with Callum Bonnyman as they share their globetrotting to alternative and unknwon places!',
  }}
>
  <Section spacing="md" slot="header">
    <header
      class="flex flex-col items-center justify-center min-h-most text-center"
    >
      <div class="flex flex-col items-center mb-8 md:mb-12 lg:mb-16">
        <Logo class="text-[8rem]" />
        <Wordmark class:list="text-[6rem]" />
      </div>

      <div class="max-w-prose mx-auto">
        <Heading as="h1" size="h1" class:list="mb-10">
          Discovering offbeat travel destinations through my travel blog
        </Heading>
        <Text size="lg">Check out my most recent blog posts below</Text>
      </div>

      <div class="grid place-items-center mt-6 text-4xl">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-[1em] h-[1em] fade-out-up pointer-events-none"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 256 256"
          user-select="none"
          ><path
            d="M231.39,132.94A8,8,0,0,0,224,128H184V104a8,8,0,0,0-8-8H80a8,8,0,0,0-8,8v24H32a8,8,0,0,0-5.66,13.66l96,96a8,8,0,0,0,11.32,0l96-96A8,8,0,0,0,231.39,132.94ZM128,220.69,51.31,144H80a8,8,0,0,0,8-8V112h80v24a8,8,0,0,0,8,8h28.69ZM72,40a8,8,0,0,1,8-8h96a8,8,0,0,1,0,16H80A8,8,0,0,1,72,40Zm0,32a8,8,0,0,1,8-8h96a8,8,0,0,1,0,16H80A8,8,0,0,1,72,72Z"
          ></path>
        </svg>
      </div>
    </header>
  </Section>

  {
    posts.length > 0 && (
      <TeaserGrid>
        {posts.map((post) => (
          <ArticleTeaser {...post} />
        ))}
      </TeaserGrid>
    )
  }
</BaseLayout>
