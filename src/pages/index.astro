---
import {
  ArticleTeaser,
  Heading,
  Logo,
  Section,
  TeaserGrid,
  Text,
  Wordmark,
} from '~/components';
import { getLatestPosts } from '~/sanity/queries';
import { BaseLayout } from '~/layouts';

const posts = await getLatestPosts();
---

<BaseLayout
  meta={{
    title:
      'Exploring the World | callum.co.uk | Personal Travel Adventures Home',
    description:
      'Embark on a journey with Callum Bonnyman as they share their globetrotting to alternative and unknwon places!',
  }}
>
  <Section spacing="md" slot="header" class="pt-20 md:pt-24">
    <header
      class="flex flex-col items-center justify-center text-center px-4 py-8 md:py-12"
    >
      <div class="flex flex-col items-center mb-6 md:mb-8">
        <Logo class="text-[5rem] md:text-[6rem] lg:text-[7rem] opacity-90" />
        <Wordmark class:list="text-[4rem] md:text-[5rem] lg:text-[6rem] mt-1" />
      </div>

      <div class="max-w-3xl mx-auto">
        <Heading as="h1" size="h1" class:list="mb-4 md:mb-6">
          Discovering offbeat travel destinations through my travel blog
        </Heading>
        <Text size="md" class:list="text-gray-600 dark:text-gray-400">
          Check out my most recent blog posts below
        </Text>
      </div>

      <div class="grid place-items-center mt-6 md:mt-8 text-2xl md:text-3xl text-gray-400 dark:text-gray-600">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-[1em] h-[1em] pointer-events-none"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 256 256"
          user-select="none"
          ><path
            d="M231.39,132.94A8,8,0,0,0,224,128H184V104a8,8,0,0,0-8-8H80a8,8,0,0,0-8,8v24H32a8,8,0,0,0-5.66,13.66l96,96a8,8,0,0,0,11.32,0l96-96A8,8,0,0,0,231.39,132.94ZM128,220.69,51.31,144H80a8,8,0,0,0,8-8V112h80v24a8,8,0,0,0,8,8h28.69ZM72,40a8,8,0,0,1,8-8h96a8,8,0,0,1,0,16H80A8,8,0,0,1,72,40Zm0,32a8,8,0,0,1,8-8h96a8,8,0,0,1,0,16H80A8,8,0,0,1,72,72Z"
          ></path>
        </svg>
      </div>
    </header>
  </Section>

  {
    posts.length > 0 && (
      <TeaserGrid>
        {posts.map((post, index) => (
          <ArticleTeaser {...post} lazy={index >= 2} />
        ))}
      </TeaserGrid>
    )
  }
</BaseLayout>
