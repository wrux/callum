---
import {
  ArticleTeaser,
  Logo,
  Section,
  TeaserGrid,
  Wordmark,
} from '~/components';
import { Icon } from 'astro-icon/components';
import { getLatestPosts } from '~/sanity/queries';
import { BaseLayout } from '~/layouts';

const posts = await getLatestPosts();
---

<BaseLayout
  meta={{
    title:
      'Exploring the World | callum.co.uk | Personal Travel Adventures Home',
    description:
      'Embark on a journey with Callum Bonnyman as they share their globetrotting to alternative and unknwon places!',
  }}
>
  <div
    id="hero-section"
    class="flex flex-col items-center justify-center text-center px-4 py-12 md:py-16"
  >
    <div class="flex flex-col items-center mb-10 md:mb-12 lg:mb-14">
      <Logo class="text-[4rem] md:text-[5rem] lg:text-[6rem] opacity-90 mb-3" />
      <Wordmark class:list="text-[3rem] md:text-[4rem] lg:text-[5rem]" />
    </div>

    <div class="mb-12 space-y-5 md:space-y-6 lg:space-y-7">
      <h1 class="type-h1">
        Journeys beyond the obvious,
        <span class="lg:block">shaped by curiosity</span>
      </h1>
      <p class="type-text-lg text-gray-300 max-w-2xl mx-auto">
        Stories and photographs from journeys to places less traveled, capturing
        the essence of alternative destinations around the world.
      </p>
    </div>

    <div class="w-full max-w-3xl mx-auto bg-gray-950">
      <div class="relative flex items-center justify-center">
        <div class="absolute inset-0 flex items-center">
          <div
            class="w-full h-px bg-gradient-to-r from-transparent via-gray-700 to-transparent"
          >
          </div>
        </div>
        <div class="relative flex items-center gap-5 md:gap-6 px-6">
          <div
            class="flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-full backdrop-blur-sm border border-white/20 bg-gray-950 shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-md group"
          >
            <Icon
              name="mdi:airplane"
              class="w-3 h-3 md:w-5 md:h-5 text-white transition-transform duration-300 rotate-[-15deg] group-hover:rotate-[-25deg]"
            />
          </div>
          <div
            class="flex items-center justify-center w-14 h-14 md:w-16 md:h-16 rounded-full backdrop-blur-sm border border-white/20 bg-gray-950 shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-md group"
          >
            <Icon
              name="mdi:map-marker"
              class="w-6 h-6 md:w-7 md:h-7 text-white transition-transform duration-300 group-hover:scale-110"
            />
          </div>
          <div
            class="flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-full backdrop-blur-sm border border-white/20 bg-gray-950 shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-md group"
          >
            <Icon
              name="mdi:camera"
              class="w-3 h-3 md:w-5 md:h-5 text-white transition-transform duration-300 rotate-[-15deg] group-hover:rotate-[-25deg]"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  {
    posts.length > 0 && (
      <TeaserGrid>
        {posts.map((post, index) => (
          <ArticleTeaser {...post} lazy={index >= 2 ? index : undefined} />
        ))}
      </TeaserGrid>
    )
  }
</BaseLayout>
