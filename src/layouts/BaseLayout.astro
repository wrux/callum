---
import { ViewTransitions } from 'astro:transitions';
import { SEO } from 'astro-seo';
import { Icon } from 'astro-icon/components';
import { Logo, Wordmark } from '~/components';

import '@fontsource-variable/inter';
import '../styles/link.css';
import '../styles/transitions.css';
import '../styles/global.css';

type meta = {
  title?: string;
  description?: string;
  image?: string;
};

export type Props = {
  meta?: meta;
};

const { meta } = Astro.props;

const title = meta?.title || 'Callum Bonnyman | callum.co.uk';
const description =
  meta?.description ||
  'Callum Bonnyman: Discovering offbeat travel destinations through my travel blog.';
const image = meta?.image || 'https://callum.co.uk/callum-social-image.webp';

const thisYear = new Date().getFullYear();
const isHomepage = Astro.url.pathname === '/';
---

<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title,
          type: 'post',
          image,
        },
      }}
      twitter={{
        creator: '@wrux',
      }}
      extend={{
        meta: [
          {
            name: 'twitter:image',
            content: image,
          },
          { name: 'twitter:title', content: title },
          { name: 'twitter:description', content: description },
        ],
      }}
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f00" />
    <meta name="msapplication-TileColor" content="#040D12" />
    <meta name="theme-color" content="#040D12" />

    <ViewTransitions />
  </head>

  <body
    class="bg-gray-950 text-gray-50 antialiased"
    data-is-homepage={isHomepage}
  >
    <header
      class={`site-header fixed top-4 left-4 right-4 z-50 flex justify-between items-center pointer-events-none transition-transform duration-500 ease-in-out ${
        isHomepage ? '-translate-y-[150%]' : 'translate-y-0'
      }`}
    >
      <a
        class="pointer-events-auto transition-opacity hover:opacity-70"
        href="/"
        aria-label="Go to the homepage"
      >
        <Logo class="text-[2rem] md:text-[2.5rem]" />
      </a>
      {
        !isHomepage && (
          <a
            href="/"
            class="pointer-events-auto grid place-items-center w-10 h-10 rounded-full bg-gray-950/80 backdrop-blur-xl border-2 border-gray-700 hover:border-gray-600 shadow-md hover:shadow-lg transition-all duration-200 text-gray-100 hover:text-gray-300"
            aria-label="Go to the homepage"
          >
            <Icon name="mdi:arrow-left" class="w-5 h-5" />
          </a>
        )
      }
    </header>

    <slot name="header" />

    <main class="flex-1" transition:animate="fade">
      <slot />
    </main>

    <footer
      class="mt-8 bg-gray-950 border-t border-gray-800 py-12 md:py-16 lg:py-20"
    >
      <div class="container max-w-6xl space-y-10 md:space-y-16">
        <div
          class="grid grid-cols-1 md:grid-cols-4 gap-x-16 gap-y-8 items-start"
        >
          <div class="col-span-1">
            <Logo class="text-[5rem] md:text-[6rem] opacity-90" />
          </div>

          <div class="col-span-1">
            <p class="type-h6 mb-4 text-gray-100 font-semibold">Links</p>
            <nav aria-label="External links" class="flex gap-2">
              <ul class="flex gap-3 text-3xl md:text-4xl">
                <li>
                  <a
                    href="https://instagram.com/wrux"
                    target="_blank"
                    class="link transition-all duration-200 hover:scale-110 hover:text-brand-light"
                    aria-label="View my Instagram profile"
                    rel="noreferrer nofollow"
                  >
                    <Icon name="mdi:instagram" class="w-[1em] h-[1em]" />
                  </a>
                </li>
                <li>
                  <a
                    href="https://github.com/wrux"
                    target="_blank"
                    class="link transition-all duration-200 hover:scale-110 hover:text-brand-light"
                    aria-label="View my Github profile"
                    rel="noreferrer nofollow"
                  >
                    <Icon name="mdi:github" class="w-[1em] h-[1em]" />
                  </a>
                </li>
                <li>
                  <a
                    href="https://www.linkedin.com/in/wrux"
                    target="_blank"
                    class="link transition-all duration-200 hover:scale-110 hover:text-brand-light"
                    aria-label="View my Linkedin profile"
                    rel="noreferrer nofollow"
                  >
                    <Icon name="mdi:linkedin" class="w-[1em] h-[1em]" />
                  </a>
                </li>
              </ul>
            </nav>
          </div>

          <div class="col-span-1 md:col-span-2">
            <p class="type-h6 mb-3 text-gray-100 font-semibold">
              Like this website?
            </p>
            <p class="type-text-sm text-gray-400">
              If you like this website,{' '}
              <a
                href="https://github.com/wrux/bloke"
                target="_blank"
                class="link font-medium"
                rel="noreferrer nofollow"
              >
                view the source code
              </a>
              , fork the project and take whatever you like.
            </p>
          </div>
        </div>

        <p class="type-text-sm text-center text-gray-500 pt-8 border-t border-gray-800">
          Copyright &copy;{' '}
          <a
            href="https://wrux.com"
            target="_blank"
            class="link font-medium"
            aria-label="View my professional profile at wrux.com"
            rel="noreferrer"
          >
            Callum Bonnyman
          </a>{' '}
          {thisYear}.
        </p>
      </div>
    </footer>

    <script>
      import Alpine from 'alpinejs';

      window.Alpine = Alpine;

      Alpine.start();

      // Update header position based on current page and scroll
      function updateHeaderPosition() {
        const header = document.querySelector('.site-header');
        const isHomepage = window.location.pathname === '/';

        if (header) {
          if (isHomepage) {
            const heroSection = document.getElementById('hero-section');
            if (heroSection) {
              const heroBottom = heroSection.getBoundingClientRect().bottom;
              const scrolledPastHero = heroBottom < 0;

              if (scrolledPastHero) {
                header.classList.remove('-translate-y-[150%]');
                header.classList.add('translate-y-0');
              } else {
                header.classList.remove('translate-y-0');
                header.classList.add('-translate-y-[150%]');
              }
            } else {
              // Fallback: hide header if hero section not found
              header.classList.remove('translate-y-0');
              header.classList.add('-translate-y-[150%]');
            }
          } else {
            header.classList.remove('-translate-y-[150%]');
            header.classList.add('translate-y-0');
          }
        }
      }

      // Initialize header position
      updateHeaderPosition();

      // Add scroll listener for homepage header transition
      // Uses requestAnimationFrame for performance
      let ticking = false;
      function handleScroll() {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateHeaderPosition();
            ticking = false;
          });
          ticking = true;
        }
      }
      window.addEventListener('scroll', handleScroll, { passive: true });

      // Update on view transition
      document.addEventListener('astro:after-swap', () => {
        // Update header position
        updateHeaderPosition();

        // Handle image animations
        document
          .querySelectorAll<HTMLImageElement>('img[data-x-lqip="true"]')
          .forEach((img) => {
            img.addEventListener('load', () => {
              img.animate([{ opacity: 0 }, { opacity: 1 }], {
                duration: parseInt(img.dataset['xLqipTransitionDuration']!),
                fill: 'forwards',
              });
            });
            if (img.complete) {
              img.style.opacity = '1';
            }
          });
      });
    </script>

    <style is:global>
      [x-cloak] {
        display: none !important;
      }

      .site-header {
        view-transition-name: site-header;
      }

      @media (prefers-reduced-motion: no-preference) {
        ::view-transition-old(site-header),
        ::view-transition-new(site-header) {
          animation-duration: 0.5s;
          animation-timing-function: ease-in-out;
        }
      }
    </style>
  </body>
</html>
