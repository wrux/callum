---
import SanityImage from '../SanityImage.astro';
import Section from '../Section.astro';

const { caption, image } = Astro.props.node;
---

<Section data-block="image" gap="xs">
  <figure class="contents scale-in-up">
    <div class="col-span-12 lg:col-start-3">
      <SanityImage image={image} />
    </div>
    {
      caption && (
        <figcaption class="px-5 md:col-span-8 md:col-start-2 lg:col-span-6 lg:col-start-3 md:px-0 text-step--2 italic">
          {caption}
        </figcaption>
      )
    }
  </figure>
</Section>
