---
const props = Astro.props;
const { node, index, isInline, ...attrs } = props;
const styleIs = (style: string) => style === node.style;
---

{
  styleIs('h1') ? (
    <h1 class="type-h1 mt-12 mb-6 first:mt-0" {...attrs}>
      <slot />
    </h1>
  ) : styleIs('h2') ? (
    <h2 class="type-h2 mt-10 mb-5 first:mt-0" {...attrs}>
      <slot />
    </h2>
  ) : styleIs('h3') ? (
    <h3 class="type-h3 mt-8 mb-4 first:mt-0" {...attrs}>
      <slot />
    </h3>
  ) : styleIs('h4') ? (
    <h4 class="type-h4 mt-6 mb-3 first:mt-0" {...attrs}>
      <slot />
    </h4>
  ) : styleIs('h5') ? (
    <h5 class="type-h5 mt-6 mb-3 first:mt-0" {...attrs}>
      <slot />
    </h5>
  ) : styleIs('h6') ? (
    <h6 class="type-h6 mt-6 mb-3 first:mt-0" {...attrs}>
      <slot />
    </h6>
  ) : styleIs('blockquote') ? (
    <blockquote class="border-l-4 border-brand-light pl-6 py-2 my-6 italic text-gray-300" {...attrs}>
      <slot />
    </blockquote>
  ) : styleIs('normal') ? (
    <p class="type-text-md my-5 leading-relaxed" {...attrs}>
      <slot />
    </p>
  ) : (
    <p class="type-text-md my-5 leading-relaxed" {...props}>
      <slot />
    </p>
  )
}
