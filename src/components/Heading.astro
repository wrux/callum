---
import { cva, type VariantProps } from 'class-variance-authority';

const sectionVariants = cva(['font-sans', 'font-bold', 'leading-tight', 'tracking-tight'], {
  variants: {
    size: {
      h1: 'text-4xl md:text-5xl lg:text-6xl xl:text-7xl',
      h2: 'text-3xl md:text-4xl lg:text-5xl',
      h3: 'text-2xl md:text-3xl lg:text-4xl',
      h4: 'text-xl md:text-2xl lg:text-3xl',
      h5: 'text-lg md:text-xl uppercase tracking-wider',
      h6: 'text-base md:text-lg',
    },
  },
});

export type Props = VariantProps<typeof sectionVariants> & {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p';
};

const { as: As = 'h2', size = 'h2', ...props } = Astro.props;
---

<As class:list={sectionVariants({ size: size })} {...props}>
  <slot />
</As>
