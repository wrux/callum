---
import { cva, type VariantProps } from 'class-variance-authority';

const sectionVariants = cva(['font-sans', 'font-normal'], {
  variants: {
    display: {
      muted: 'text-gray-600 dark:text-gray-400',
    },
    size: {
      xs: 'text-xs lg:text-sm leading-relaxed',
      sm: 'text-sm lg:text-base leading-relaxed',
      md: 'text-base lg:text-lg leading-relaxed',
      lg: 'text-lg lg:text-xl xl:text-2xl leading-relaxed',
    },
  },
  defaultVariants: {
    size: 'md',
  },
});

export type Props = VariantProps<typeof sectionVariants> & {
  as?:
    | 'h1'
    | 'h2'
    | 'h3'
    | 'h4'
    | 'h5'
    | 'h6'
    | 'p'
    | 'span'
    | 'div'
    | 'figcaption';
};

const { as: As = 'p', display, size, ...props } = Astro.props;
---

<As class:list={sectionVariants({ display, size })} {...props}>
  <slot />
</As>
