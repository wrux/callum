---
import { ArticleTeaser, Wordmark } from '../components';
import { BaseLayout } from '../layouts';

const postQuery = `
  *[_type == "post"] | order(publishedAt desc, _updatedAt desc) {
    _id,
    title,
    publishedAt,
    excerpt,
    "countries": countries[] -> {
      _id,
      countryCode,
      name,
      "slug": slug.current,
    },
    "slug": slug.current,
  }
`;

import { useSanityClient } from '@sanity/astro';

interface Country {
  _id: string;
  countryCode: string;
  name: string;
  slug: string;
  posts: Post[];
}

interface Post {
  _id: string;
  excerpt: string;
  publishedAt: string;
  slug: string;
  title: string;
}

const client = useSanityClient();
const posts = await client.fetch<Post[]>(postQuery);
