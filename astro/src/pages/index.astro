---
import type { SanityDocument, SanityImageAssetDocument } from '@sanity/client';
import { ArticleTeaser, PageTitle, Section, Wordmark } from '../components';
import { BaseLayout } from '../layouts';

const countriesQuery = `*[_type == "country"]|order(name asc) {
  _id,
  countryCode,
  name,
  "slug": slug.current,
}`;

const postQuery = `
  *[_type == "post"] | order(publishedAt desc, _updatedAt desc) {
    _id,
    title,
    publishedAt,
    excerpt,
    "countries": countries[] -> {
      _id,
      countryCode,
      name,
      "slug": slug.current,
    },
    ${imageFragment('mainImage')},
    "imageCount": math::sum(
      content[] {
        "count": 0,
        _type == "imageBlock" => {
          "count": 1,
        },
        _type in ["imageGalleryBlock", "inlineImagesBlock"] => {
          "count": length(images[]),
        },
      }.count
    ),
    // Assumes 5 characters as mean word length
    // https://ux.stackexchange.com/questions/22520/how-long-does-it-take-to-read-x-number-of-characters
    // Words per minute: 180
    "readingTime": round(
      length(pt::text(content[].content))
      / 5 / 180
    ),
    "slug": slug.current,
  }
`;

import { useSanityClient } from '@sanity/astro';
import { imageFragment } from '../sanity/fragments';

interface ImageWithMeta extends SanityImageAssetDocument {
  alt?: string;
}

interface Post extends SanityDocument {
  excerpt: string;
  publishedAt: string;
  mainImage: ImageWithMeta;
  slug: string;
  title: string;
}

const client = useSanityClient();
const countries = await client.fetch<Country[]>(countriesQuery);
const posts = await client.fetch<Post[]>(postQuery);
---

<BaseLayout
  title="About Me"
  description="Lorem ipsum dolor sit amet"
  image="/blog-placeholder-about.jpg"
>
  <Section spacing="md" slot="header">
    <header
      class="flex flex-col justify-center min-h-most col-span-12 px-5 py-6 mb-16 lg:col-start-3 lg:px-0 md:mb-0"
    >
      <p class="text-step-5">
        <span class="inline-block origin-[70% 70%] leading-none animate-wave">
          ğŸ‘‹ğŸ»
        </span>
      </p>
      <div class="prose dark:prose-invert">
        <h1 class="mb-8">
          <Wordmark size={6} />
        </h1>
        <h2 class="mt-0 mb-4">
          My travel blog from many countries all around the world.
        </h2>
        <nav class="flex flex-wrap items-center gap-y-6 gap-x-4">
          {
            countries.map((country) => (
              <a
                class="text-step--1 leading-none link"
                href={`/country/${country.slug}`}
                transition:name={`country_link_${country._id}`}
              >
                {country.name}
              </a>
            ))
          }
        </nav>
      </div>
    </header>
  </Section>

  <Section spacing="md">
    <div class="px-5 md:col-span-8 md:col-start-2 lg:col-start-3 md:px-0">
      <PageTitle as="h2" className="mb-4 lg:mb-16">Latest Articles</PageTitle>
      <div class="space-y-12">
        {posts.map((post) => <ArticleTeaser {...post} />)}
      </div>
    </div>
  </Section>
</BaseLayout>
